<div class="chat-container" data-controller="conversation">

  <section class="chat-section" data-conversation-target="response">
  </section>

  <div class="chat-bottom">
    <%= form_with html: {class: "mb-2", data: { action: "conversation#generateResponse" }}  do |f| %>
      <%= f.text_field :message, placeholder: "tell me your expense", data: { conversation_target: "prompt" }, class: "form-control large-text-field" %>
      <div style="display:none">
        <%= f.file_field :image, id: 'fileInput', data: { action:"change->conversation#upload" }, accept: "image/*" %>
      </div>
      <label for="fileInput" class="custom-file-upload">
      <%= image_tag 'pixelated-upload.png', alt: "Upload Image", width: '45', height: '45'  %>
      </label>
    <% end %>
  <button class="btn" data-action="click->conversation#saveExpense">save expense</button>
  </div>
</div>
